<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ASPMVC_View</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ASPMVC_View.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="border-1 bg-warning w-100" style="height:200px;">
        <h1> Header</h1>
    </div>



    <div class="container">
        <main role="main" class="pb-3">
            <div class="row">
                <div class="col-3 border-1 alert-primary" >
                    @RenderSection("Adertisments", false)
                </div>
                <div class="col-6">
                    @RenderBody()

                </div>
                <div class="col-3 border-1 alert-primary">
                    @RenderSection("Adertisments1", false)
                </div>
            </div>
        </main>
    </div>


    <div class="border-1 bg-primary w-100" style="height:200px;">
        <h1> Body</h1>
    </div>

    <div class="border-1 bg-info w-100" style="height:200px;">
        <h1> Footer</h1>
    </div>
</body>
